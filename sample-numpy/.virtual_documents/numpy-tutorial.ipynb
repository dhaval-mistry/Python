#Operation on array 

arr = np.array([[1,2,3],[4,5,6]])
print(arr, arr.shape)

reshared = arr.reshape((3,2))
print(reshared, reshared.shape)

flattened = arr.flatten() #convert 2D to 1D 
print(flattened, flattened.shape)


#indexing

arr = np.array([1,2,3,4,5])
print(arr[0])
print(arr[1])

#2D indexing access
arr2D = np.array([[1,2,3],[4,5,6]])
print(arr2D[0][1])
print(arr2D[1][0])

#fancy Indexing
arr = np.array([1,2,3,4,5])
idx = [0,1,3]
print(arr[idx])

#boolean indexing
arr = np.array([1,2,3,4,5])
print(arr[arr > 3])
print(arr[arr % 2 ==0])


#Slicing
#[start, end, step]
arr = np.array([1,2,3,4,5])
print(arr[1:4])
print(arr[1:])
print(arr[:4])
print(arr[:])
print(arr[::2])




#py List vs NumPy array
#copy vs view 
#py list make copy and update copy 
nums = [1,2,3,4,5]
sub_list = nums[1:3]
print(sub_list)
sub_list[0] = 200
print(sub_list)
print(nums)

#NumPy Array make a view and change on originial Array only.
arr = np.array([1,2,3,4,5])
sub_arr = arr[1:3]
print(sub_arr)
sub_arr[0] = 200
print(sub_arr)
print(arr)

